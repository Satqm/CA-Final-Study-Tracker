    <script>
        // ====================
        // CONSTANTS
        // ====================
        const MASTER_KEY = "S@tyamCA2026@Premium";
        const BACKUP_KEY = "RadhaKrishna@2026";
        const DEMO_LICENSE = "DEMO-CA-FINAL-2026-TRIAL-KEY";
        
        // ====================
        // DOM ELEMENTS
        // ====================
        const customerNameInput = document.getElementById('customerName');
        const licenseTypeSelect = document.getElementById('licenseType');
        const expiryDateInput = document.getElementById('expiryDate');
        const deviceIdInput = document.getElementById('deviceId');
        const masterKeyInput = document.getElementById('masterKey');
        const backupKeyInput = document.getElementById('backupKey');
        const useDemoKeyCheckbox = document.getElementById('useDemoKey');
        const licenseKeyDisplay = document.getElementById('licenseKeyDisplay');
        const jsonDisplay = document.getElementById('jsonDisplay');
        const generateBtn = document.getElementById('generateBtn');
        const copyBtn = document.getElementById('copyBtn');
        const testBtn = document.getElementById('testBtn');
        const toast = document.getElementById('toast');
        const toastTitle = document.getElementById('toast-title');
        const toastMessage = document.getElementById('toast-message');
        
        // ====================
        // INITIALIZATION
        // ====================
        document.addEventListener('DOMContentLoaded', function() {
            // Set default expiry date (1 year from now)
            const defaultExpiry = new Date();
            defaultExpiry.setFullYear(defaultExpiry.getFullYear() + 1);
            expiryDateInput.value = defaultExpiry.toISOString().split('T')[0];
            
            // Set up event listeners
            setupEventListeners();
            
            // Generate initial key
            generateLicenseKey();
        });
        
        function setupEventListeners() {
            generateBtn.addEventListener('click', generateLicenseKey);
            copyBtn.addEventListener('click', copyToClipboard);
            testBtn.addEventListener('click', testLicenseKey);
            
            // Auto-generate when inputs change
            customerNameInput.addEventListener('input', generateLicenseKey);
            licenseTypeSelect.addEventListener('change', function() {
                updateExpiryDateBasedOnType();
                generateLicenseKey();
            });
            expiryDateInput.addEventListener('change', generateLicenseKey);
            deviceIdInput.addEventListener('input', generateLicenseKey);
            useDemoKeyCheckbox.addEventListener('change', generateLicenseKey);
            
            // Predefined template buttons
            document.querySelectorAll('.predefined-key').forEach(button => {
                button.addEventListener('click', function() {
                    const template = this.getAttribute('data-template');
                    applyTemplate(template);
                });
            });
            
            // Generate device ID button
            const deviceIdGroup = document.querySelector('.form-group:nth-child(1)');
            const generateDeviceIdBtn = document.createElement('button');
            generateDeviceIdBtn.innerHTML = '<i class="fas fa-random"></i> Generate';
            generateDeviceIdBtn.type = 'button';
            generateDeviceIdBtn.style.cssText = `
                position: absolute;
                right: 10px;
                top: 35px;
                background: #3498db;
                color: white;
                border: none;
                border-radius: 6px;
                padding: 6px 12px;
                font-size: 12px;
                cursor: pointer;
            `;
            deviceIdGroup.style.position = 'relative';
            deviceIdGroup.appendChild(generateDeviceIdBtn);
            
            generateDeviceIdBtn.addEventListener('click', function() {
                const deviceId = generateDeviceId();
                deviceIdInput.value = deviceId;
                generateLicenseKey();
            });
        }
        
        function updateExpiryDateBasedOnType() {
            const type = licenseTypeSelect.value;
            const today = new Date();
            let expiryDate = new Date(today);
            
            switch(type) {
                case 'trial':
                    expiryDate.setDate(today.getDate() + 7);
                    break;
                case 'monthly':
                    expiryDate.setMonth(today.getMonth() + 1);
                    break;
                case 'yearly':
                    expiryDate.setFullYear(today.getFullYear() + 1);
                    break;
                case 'premium':
                    expiryDate.setFullYear(today.getFullYear() + 1);
                    break;
                case 'lifetime':
                    expiryDate.setFullYear(today.getFullYear() + 100);
                    break;
            }
            
            expiryDateInput.value = expiryDate.toISOString().split('T')[0];
        }
        
        function generateDeviceId() {
            // Generate a random device ID similar to the main app
            const navigatorInfo = JSON.stringify({
                userAgent: navigator.userAgent,
                language: navigator.language,
                platform: navigator.platform,
                hardwareConcurrency: navigator.hardwareConcurrency || 4,
                deviceMemory: navigator.deviceMemory || 8
            });
            
            return CryptoJS.SHA256(navigatorInfo).toString().substring(0, 16).toUpperCase();
        }
        
        function applyTemplate(template) {
            switch(template) {
                case 'premium':
                    customerNameInput.value = 'Premium User';
                    licenseTypeSelect.value = 'premium';
                    deviceIdInput.value = '';
                    updateExpiryDateBasedOnType();
                    break;
                    
                case 'lifetime':
                    customerNameInput.value = 'Lifetime User';
                    licenseTypeSelect.value = 'lifetime';
                    deviceIdInput.value = '';
                    updateExpiryDateBasedOnType();
                    break;
                    
                case 'trial':
                    customerNameInput.value = 'Trial User';
                    licenseTypeSelect.value = 'trial';
                    deviceIdInput.value = '';
                    updateExpiryDateBasedOnType();
                    break;
                    
                case 'demo':
                    customerNameInput.value = 'Demo User';
                    licenseTypeSelect.value = 'trial';
                    deviceIdInput.value = '';
                    useDemoKeyCheckbox.checked = true;
                    updateExpiryDateBasedOnType();
                    break;
            }
            
            generateLicenseKey();
        }
        
        // ====================
        // LICENSE GENERATION
        // ====================
        function generateLicenseKey() {
            try {
                // Get form values
                const customerName = customerNameInput.value.trim() || 'Premium User';
                const licenseType = licenseTypeSelect.value;
                const expiryDate = expiryDateInput.value;
                const deviceId = deviceIdInput.value.trim();
                const includeDemoKey = useDemoKeyCheckbox.checked;
                
                // Create license data object
                const licenseData = {
                    customer: customerName,
                    type: licenseType,
                    expiry: expiryDate,
                    deviceId: deviceId || null,
                    generated: new Date().toISOString(),
                    version: '4.0'
                };
                
                // Generate license key
                const licenseKey = encryptLicenseData(licenseData);
                
                // Display results
                jsonDisplay.textContent = JSON.stringify(licenseData, null, 2);
                
                let displayText = licenseKey;
                if (includeDemoKey) {
                    displayText += `\n\nDemo License Key (for testing):\n${DEMO_LICENSE}`;
                }
                
                licenseKeyDisplay.textContent = displayText;
                
                // Enable buttons
                copyBtn.disabled = false;
                testBtn.disabled = false;
                
                // Show success message
                showToast('License key generated successfully!', 'success');
                
            } catch (error) {
                console.error('Error generating license key:', error);
                licenseKeyDisplay.textContent = 'Error generating license key. Please check your inputs.';
                jsonDisplay.textContent = 'Error: ' + error.message;
                showToast('Error generating license key', 'error');
            }
        }
        
        function encryptLicenseData(licenseData) {
            // Convert data to JSON string
            const jsonString = JSON.stringify(licenseData);
            
            // First layer encryption with MASTER_KEY
            const firstEncryption = CryptoJS.AES.encrypt(jsonString, MASTER_KEY).toString();
            
            // Second layer encryption with BACKUP_KEY
            const secondEncryption = CryptoJS.AES.encrypt(firstEncryption, BACKUP_KEY).toString();
            
            return secondEncryption;
        }
        
        function decryptLicenseKey(licenseKey) {
            try {
                // Try with BACKUP_KEY first (second layer)
                let decrypted = CryptoJS.AES.decrypt(licenseKey, BACKUP_KEY).toString(CryptoJS.enc.Utf8);
                
                if (!decrypted) {
                    // Try with MASTER_KEY directly (if single encrypted)
                    decrypted = CryptoJS.AES.decrypt(licenseKey, MASTER_KEY).toString(CryptoJS.enc.Utf8);
                    if (decrypted) {
                        // This was single encrypted, return it
                        return JSON.parse(decrypted);
                    }
                } else {
                    // Second layer decrypted, now decrypt first layer
                    const finalDecrypted = CryptoJS.AES.decrypt(decrypted, MASTER_KEY).toString(CryptoJS.enc.Utf8);
                    if (finalDecrypted) {
                        return JSON.parse(finalDecrypted);
                    }
                }
                
                return null;
            } catch (error) {
                console.error('Decryption error:', error);
                return null;
            }
        }
        
        // ====================
        // UTILITY FUNCTIONS
        // ====================
        function copyToClipboard() {
            const textToCopy = licenseKeyDisplay.textContent;
            
            navigator.clipboard.writeText(textToCopy).then(() => {
                showToast('License key copied to clipboard!', 'success');
            }).catch(err => {
                console.error('Failed to copy:', err);
                showToast('Failed to copy to clipboard', 'error');
            });
        }
        
        function testLicenseKey() {
            const licenseKey = licenseKeyDisplay.textContent.split('\n')[0]; // Get first line only
            
            if (licenseKey === DEMO_LICENSE) {
                showToast('Demo license key detected - always valid', 'success');
                return;
            }
            
            const decryptedData = decryptLicenseKey(licenseKey);
            
            if (decryptedData) {
                const message = `License valid!\nCustomer: ${decryptedData.customer}\nType: ${decryptedData.type}\nExpiry: ${decryptedData.expiry}`;
                
                // Check if expired
                if (decryptedData.expiry) {
                    const expiryDate = new Date(decryptedData.expiry);
                    const today = new Date();
                    
                    if (expiryDate < today) {
                        showToast('License is expired!', 'error');
                    } else {
                        showToast(message, 'success');
                    }
                } else {
                    showToast(message, 'success');
                }
                
            } else {
                showToast('Invalid license key format', 'error');
            }
        }
        
        function showToast(message, type = 'success') {
            toastTitle.textContent = type === 'success' ? 'Success!' : 'Error!';
            toastMessage.textContent = message;
            
            // Update icon
            const icon = toast.querySelector('i');
            icon.className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';
            
            // Update styling
            toast.className = `toast ${type}`;
            
            // Show toast
            toast.classList.add('show');
            
            // Auto-hide after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // ====================
        // EXPORT FUNCTIONS (for console debugging)
        // ====================
        window.generateSampleKeys = function() {
            console.log('=== Sample License Keys ===');
            
            // Generate a few sample keys
            const samples = [
                {
                    customer: 'Premium User',
                    type: 'premium',
                    expiry: new Date(new Date().setFullYear(new Date().getFullYear() + 1)).toISOString().split('T')[0]
                },
                {
                    customer: 'Trial User',
                    type: 'trial',
                    expiry: new Date(new Date().setDate(new Date().getDate() + 7)).toISOString().split('T')[0]
                },
                {
                    customer: 'Lifetime User',
                    type: 'lifetime',
                    expiry: new Date(new Date().setFullYear(new Date().getFullYear() + 100)).toISOString().split('T')[0]
                }
            ];
            
            samples.forEach((data, index) => {
                const key = encryptLicenseData(data);
                console.log(`Sample ${index + 1}:`, data);
                console.log(`Key: ${key}`);
                console.log('---');
            });
            
            console.log('Demo License:', DEMO_LICENSE);
        };
        
        // ====================
        // BATCH GENERATION (for multiple keys)
        // ====================
        window.generateBatchKeys = function(count = 10) {
            console.log(`=== Generating ${count} License Keys ===`);
            
            const keys = [];
            for (let i = 1; i <= count; i++) {
                const data = {
                    customer: `Customer ${i}`,
                    type: i % 3 === 0 ? 'trial' : i % 3 === 1 ? 'premium' : 'lifetime',
                    expiry: new Date(new Date().setFullYear(new Date().getFullYear() + (i % 3 === 2 ? 100 : 1))).toISOString().split('T')[0],
                    generated: new Date().toISOString()
                };
                
                const key = encryptLicenseData(data);
                keys.push({ data, key });
                
                console.log(`Key ${i}:`, data);
                console.log(`Encrypted: ${key.substring(0, 50)}...`);
            }
            
            return keys;
        };
    </script>
</body>
</html>
